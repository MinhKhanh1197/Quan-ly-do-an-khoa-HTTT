@model IEnumerable<WebQLDAKhoaHTTT.Models.CHUDE>
@{
    ViewBag.Title = "FrmNopDA";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style type="text/css">
    .formdkda {
        width: 50%;
        margin-left: 27%;
        padding-top: 2%;
        padding-bottom: 2%;
    }
    #nut {
        width: 15%;
    }
    .nopbai
    {
        width:104%;
        margin-left:-2%;
    }
</style>
<div class="formdkda">
    <form>
        <div class="form-group">
            <label for="exampleFormControlInput1">Email address</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@vidu.com">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Người nộp đồ án</label>
            <input type="text" class="form-control"  placeholder="Họ và tên">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Chủ đề</label>
            <select class="form-control" id="exampleFormControlSelect1">
                @foreach (var dkda in Model)
            {
                <option> @dkda.TenCD</option>
        }
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect2">Tên đề tài</label>
            <select multiple class="form-control" id="exampleFormControlSelect2"></select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Mô tả đề tài của bạn</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="form-group" id="nut">
            <button type="submit" class="btn btn-primary btn-block">Gửi</button>
        </div>

        <div class="container nopbai">
            <div class="panel panel-default">
                <div class="panel-heading"><strong>Tải file đính kèm</strong> <small>File báo cáo</small></div>
                <div class="panel-body">
                    <!-- Standar Form -->
                    <h4>Chọn file trong máy tính</h4>
                    <form action="" method="post" enctype="multipart/form-data" id="js-upload-form">
                        <div class="form-inline">
                            <div class="form-group">
                                <input type="file" name="files[]" id="js-upload-files" multiple>
                            </div>
                            <button type="submit" class="btn btn-sm btn-primary" id="js-upload-submit">Tải file</button>
                        </div>
                    </form>
                    <!-- Drop Zone -->
                    </br>
                    <!-- Progress Bar -->
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                            <span class="sr-only">60% Complete</span>
                        </div>
                    </div>
                    <!-- Upload Finished -->
                    <div class="js-upload-finished">
                        <div class="list-group">
                            <a href="#" class="list-group-item list-group-item-success"><span class="badge alert-success pull-right">Success</span>image-01.jpg</a>
                            <a href="#" class="list-group-item list-group-item-success"><span class="badge alert-success pull-right">Success</span>image-02.jpg</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
