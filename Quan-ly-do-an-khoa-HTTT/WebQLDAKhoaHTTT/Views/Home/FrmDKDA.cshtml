@model IEnumerable<WebQLDAKhoaHTTT.Models.CHUDE>
@{
    ViewBag.Title = "Đăng ký đồ án";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">
    .formdkda {
        width: 50%;
        margin-left: 27%;
        padding-top: 2%;
        padding-bottom: 2%;

        
    }
    #nut
    {
        width:15%;
    }
</style>
<div class="formdkda">
    <form>
        <div class="form-group">
            <label for="exampleFormControlInput1">Email address</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@vidu.com">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Chủ đề</label>
            <select class="form-control" id="exampleFormControlSelect1">
                @foreach (var dkda in Model)
            {
                <option> @dkda.TenCD</option>
        }
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect2">Tên đề tài</label>
            <select multiple class="form-control" id="exampleFormControlSelect2"></select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Mô tả đề tài muốn đăng ký</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="form-group" id="nut">
            <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
        </div>
    </form>
</div>


